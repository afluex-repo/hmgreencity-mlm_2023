                                    <th style="color:dodgerblue;font-weight:800">@ViewBag.Total</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </tfoot>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lsttopupreport != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.lsttopupreport)
                                        {
                                            <tr class="text-left">
                                                <td>@i</td>
                                                <td>@Item.LoginId</td>
                                                <td>@Item.DisplayName</td>
                                                <td>@Item.SiteName</td>
                                                <td>@Item.SectorName</td>
                                                <td>@Item.BlockName</td>
                                                <td>@Item.PlotNumber</td>
                                                <td>@Item.UpgradtionDate</td>
                                                <td>@Item.PaymentMode</td>
                                                <td>@Item.Description</td>
                                                <td>@Item.Amount</td>
                                                <td>@Item.Status</td>
                                                <td>@Item.ReceiptNo</td>
                                                <td>
                                                    @*<input type="radio" name="rdbtype" value="NewBusiness" /> New Business
                                <input type="radio" name="rdbtype" value="OtherBusiness" /> Other Business*@

                                                    <input type="radio" name="rdbtypename" value="IsInclude" /> Is Include
                                                    <br />
                                                    <input type="radio" name="rdbtypename" value="NotInclude" /> Not Include

                                                </td>


                                                <td>
                                                    @*<a href="/AdminReports/PrintReciept/@Item.LoginId">Print</a>*@
                                                    <a href="javascript:void(0)" class="btn btn-sm btn-primary Update">Update</a>
                                                    <input type="hidden" class="PK_InvestmentId" value="@Item.ToLoginID" />
                                                    @*<a href="/AdminReports/PrintTopUp?ToLoginID=@Item.ToLoginID" class="btn btn-sm btn-primary" target="_blank">New Business</a>
                                <a href="/AdminReports/PrintTopUp?ToLoginID=@Item.ToLoginID" class="btn btn-sm btn-primary" target="_blank">Other Business</a>*@

                                                    @*  <button onclick="changeprintdate('@Item.PrintingDate','@Item.LoginId')">Print</button>*@
                                                </td>
                                            </tr>
                                            i++;
                                        }

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Change Printing Date</h4>
                </div>
                <div class="modal-body">
                    <input type="text" class="form-control" id="printingdate" readonly />
                    <input type="hidden" id="hdfloginnid" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="closepopup();">Close</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" onclick="printrecipt();">Print</button>
                </div>
            </div>

        </div>
    </div>
}
