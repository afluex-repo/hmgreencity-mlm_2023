                                    <th>Site Name</th>
                                    <th>Sector Name</th>
                                    <th>Block Name</th>
                                    <th>PlotNo</th>
                                    <th>Upgradation Date</th>
                                    <th>Payment Mode</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Calculation Status</th>
                                    <th>ReceiptNo</th>
                                    <th>Reward</th>
                                    <th class="not-export-col">Action</th>
                                </tr>
                            </thead>
                            <tfoot>
