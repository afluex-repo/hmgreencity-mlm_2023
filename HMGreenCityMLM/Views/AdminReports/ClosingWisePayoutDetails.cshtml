

@model HMGreenCityMLM.Models.Reports

@{
    ViewBag.Title = "ClosingWisePayoutDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Closing Wise Payout Details</h5>
                  </div>
               </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
            <div class="card-body">
              <br />
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="tableExport234" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Customer Name</th>
                                <th>Associate Name</th>
                                <th>Top Up Selection Date</th>
                                <th>Calculation Date</th>
                                <th>Paid Amount</th>
                                @*<th>Comm. Percentage</th>*@
                                <th>Income</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>Total</th>
                                <th>@ViewBag.Total</th>
                              

                            </tr>
                        </tfoot>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.ClosingWisePayoutlist != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.ClosingWisePayoutlist)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.CustomerName (@Item.LoginId)</td>
                                            <td>@Item.AssociateName (@Item.AssociateID)</td>
                                            <td>@Item.PaymentDate</td>
                                            <td>@Item.CalculationDate</td>
                                            <td>@Item.PaidAmount</td>
                                            @*<td>@Item.CommPercentage</td>*@
                                            <td>@Item.Income</td>
                                          
                                            </tr>
                                        i++;
                                    }

                                }
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



