@model HMGreenCityMLM.Models.Password
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <br />
    </div>
    <!-- /.col-lg-12 -->
</div>

<!-- /.row -->
@using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @id = "form1" }))
{
    //==================================================================================================================
    <section class="section">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h6 class="mb-0">Change Password</h6>
                            <span style="color: red">
                                @TempData["Product"]
                            </span>
                            @*<button class="btn btn-info"><a href="#!" class="text-white">Add New News</a></button>*@
                        </div>
                        <p style="color: red;display: block; margin-bottom:0px; text-align:center">

                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label>Password Type <span style="color:red">*</span></label>
                                @Html.DropDownListFor(m => m.PasswordType, new SelectList(ViewBag.ddlPasswordType, "Value", "Text"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.PasswordType)
                            </div>
                            <div class="form-group col-md-4">
                                <label>Old Password <span style="color:red">*</span></label>
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.OldPassword)
                                @*<input type ="text" id="txtLastName" value="@item1.LastName" disabled="disabled" class="form-control" />*@
                            </div>
                            <div class="form-group col-md-4">
                                <label>New Password <span style="color:red">*</span></label>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.NewPassword)
                                @*<input type ="text" id="txtMobile"  value="@item1.Mobile" disabled="disabled" class="form-control" />*@
                            </div>
                            <div class="form-group col-md-3">
                                <input type="submit" id="btnUpdate" class="btn btn-success pull-left" name="btnUpdate" value="Update" onclick="return validate();" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    //==================================================================================================================
    
}
<style>
    .errortext {
       border: 2px solid red !important;
       
    }
</style>
<script>
    function validate() {
        $(".errortext").removeClass("errortext");
        if ($('#PasswordType').val() == '0') {
            $("#PasswordType").addClass('errortext');
            $('#PasswordType').focus();
            return false;
        }
        if ($('#OldPassword').val() == '') {
            $("#OldPassword").addClass('errortext');
            $('#OldPassword').focus();
            return false;
        }
        if ($('#NewPassword').val() == '') {
            $("#NewPassword").addClass('errortext');
            $('#NewPassword').focus();
            return false;
        }

        return true;
    }
</script>


