@model HMGreenCityMLM.Models.Master
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("ProductList", "Master", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    //==================================================================================================================
   
    <section class="section">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h6 class="mb-0">Package List</h6>
                            <span style="color: red">
                                @TempData["Product"]
                            </span>
                            <button class="btn btn-info"><a href="/Master/ProductMaster" class="text-white">Add New</a></button>
                        </div>
                        <p style="color: red;display: block; margin-bottom:0px; text-align:center">
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Product Name</th>
                                        <th>Product Price</th>
                                        <th>Binary Percent</th>
                                        <th>Dircet Percent</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstproduct != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstproduct)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.ProductName</td>
                                                    <td>@Item.ProductPrice</td>
                                                    <td>@Item.BinaryPercent</td>
                                                    <td>@Item.DirectPercent</td>
                                                    <td>
                                                        <a href="/Master/ProductMaster?productID=@Item.ProductID" class="btn btn-info btn-sm">Edit</a>
                                                        <a href="/Master/DeleteProduct/@Item.ProductID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Product?');" name="btnDelete">Delete</a>
                                                        @*<a href="/Master/EditProduct/@Item.ProductID" runat="server" class="btn btn-info btn-sm pull-right" name="btnEdit">Edit</a>*@
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    //==================================================================================================================
}



