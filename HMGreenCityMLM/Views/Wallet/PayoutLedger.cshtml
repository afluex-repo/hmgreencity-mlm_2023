@model HMGreenCityMLM.Models.Wallet

@{
    ViewBag.Title = "PayoutLedger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("PayoutLedger", "Wallet", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Payout Ledger</h5>
                        @*<button class="btn btn-info"><a href="#!" class="text-white">Add New News</a></button>*@
                    </div>
                    @*<p style="color: red;display: block; margin-bottom:0px; text-align:center">
                            @TempData["ChangeAsspassword"]
                        </p>*@
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>From Date</label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group col-md-3">
                            <label>To Date</label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                        <div class="form-group col-md-4">
                            <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                        </div>
                    </div>
                    <br />
                    <div class="table-responsive">
                        <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>Transaction Date</th>
                                    <th>Narration</th>
                                    <th>CrAmount</th>
                                    <th>DrAMount</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstpayoutledger != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.lstpayoutledger)
                                        {
                                            <tr class="text-left">
                                                <td>@i</td>

                                                <td>@Item.AddedOn</td>
                                                <td>@Item.Narration</td>
                                                <td>@Item.CrAmount</td>
                                                <td>@Item.DrAmount</td>
                                                <td>@Item.PayoutBalance</td>
                                            </tr>
                                            i++;
                                        }

                                    }
                                }
                            </tbody>



                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<script src="../../WebsiteCss/js/jquery.js"></script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear:true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true
    });
</script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
<style>
    .btn-success {
        margin-top: 29px;
        margin-left: 20px;
    }
</style>

