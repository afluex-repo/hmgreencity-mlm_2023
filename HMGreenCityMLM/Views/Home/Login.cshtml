@model HMGreenCityMLM.Models.Home
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewBag.Title</title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/assetsAdmin/css/app.min.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/assetsAdmin/css/style.css">
    <link rel="stylesheet" href="~/assetsAdmin/css/components.css">
    <link rel="stylesheet" href="~/assetsAdmin/bundles/jqvmap/dist/jqvmap.min.css">
    <!-- Custom style CSS -->
    <link rel="stylesheet" href="~/assetsAdmin/css/custom.css">
    <link rel='shortcut icon' type='image/x-icon' href='~/assetsAdmin/img/favicon.png' />
    <style>
        #LoginBg {
            display: flex;
            justify-content: center;
            align-content: center;
            height: 100vh;
            align-items: center;
        }
        .body_img{
            background:url(../../assetsAdmin/img/loginBg.jpg) no-repeat;
            background-size:cover;
        }
        .loginLeftImg{
                border:5px solid #fff;
                padding:10px;
        }
        @@media (min-width:992px) {
            .loginLeftImg {
               background:url(../../assetsAdmin/img/loginLeftImg.jpg) no-repeat;
               background-size:cover;
                background-size: 50% 100%;
                padding:100px 0px!important;
            }

        }
    </style>
</head>
@*style="background:linear-gradient(225deg, rgba(0,0,0,1) 0%, rgba(19,105,118,1) 0%, rgba(46,20,55,1) 100%)"*@
<body class="body_img">
    <div class="loader"></div>
    <div id="app">
        <section class="section" id="LoginBg">
            <div class="container mt-5">
                <div class="row bg-white loginLeftImg"  style="box-shadow:0 0 20px #000000; border-radius:30px 0px 30px 0px">
                    <div class="col-12 col-md-6 col-lg-6 align-self-center text-center">
                        <h3 class="mb-0 text-white">Welcome To Our Website</h3>
                        <div class="mt-3 text-white text-center">
                            You can sign in to access with your existing profile
                        </div>
                    </div>

                    <div class="col-12 col-md-6 col-lg-6">
                        <div>
                            <div class="card-header text-center d-block">
                                @*<h3 class="mb-0">Login</h3>*@
                                <img style="height:120px; margin:auto;" src="~/images/logonew.png" alt="logo" />
                            </div>
                            <div class="card-body">
                                <h6 class="mb-4 text-center text-dark">
                                    Welcome back, please login to your account.
                                </h6>
                                @using (Html.BeginForm("LoginAction", "Home", FormMethod.Post, new { @id = "signupForm" }))
                                {
                                    <div class="form-group">
                                        <label for="email">Username</label>
                                        @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Login Id", @required = "required" })
                                        <div class="invalid-feedback">
                                        </div>
                                        <p class="text-danger">
                                            @TempData["Login"]
                                        </p>
                                    </div>
                                    <div class="form-group">
                                        <div class="d-block">
                                            <label for="password" class="control-label">Password</label>
                                        </div>
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Placeholder = "Password", @required = "required" })
                                        <div class="invalid-feedback">
                                            please fill in your password
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" id="Login" class="btn btn-primary btn-lg btn-block" name="Login" style="background:#006156" value="Sign In" />
                                    </div>
                                }
                            </div>
                        </div>
                        @*<div class="mt-5 text-muted text-center">
                                Don't have an account? <a href="auth-register.html">Create One</a>
                            </div>*@
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- END: Content-->
    <!-- General JS Scripts -->
    <script src="~/assetsAdmin/js/app.min.js"></script>
    <!-- Template JS File -->
    <script src="~/assetsAdmin/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="~/assetsAdmin/js/custom.js"></script>
</body>
</html>