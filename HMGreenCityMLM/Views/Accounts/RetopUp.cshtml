                                    </div>
                                    <div class="col-md-4" id="bankbranch" style="display: none">
                                        <label class="col-form-label">Branch </label>
                                        @Html.TextBoxFor(m => m.BankBranch, new { @class = "form-control", @placeholder = "Bank Branch" })
                                    </div>
