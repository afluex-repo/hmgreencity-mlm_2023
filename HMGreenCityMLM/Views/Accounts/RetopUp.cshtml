    function CheckReceiptNo() {
        debugger;
        var ReceiptNo = $('#ReceiptNo').val();
        if ($('#ReceiptNo').val() == '') {
            $("#ReceiptNo").addClass('errortext');
            $('#ReceiptNo').focus();
            return false;
        }
        $.ajax({
            url: '/Accounts/CheckReceiptNo',
            type: "GET",
            dataType: "JSON",
            data: { ReceiptNo: ReceiptNo },
            success: function (data) {
                debugger;
                if (data.Result == "No") {
                    $('#ReceiptError').text(data.Msg);
                    $('#ReceiptNo').val('');
                    $("#ReceiptNo").addClass('errortext');
                    $('#ReceiptNo').focus();
                    return false;
                } else {
                    if (data.Result == "Yes") {
                        $('#ReceiptError').text('');
                        $("#ReceiptNo").removeClass('errortext');
                    }
                }
            }
        });
