@model HMGreenCityMLM.Models.Master

@{
    ViewBag.Title = "SectorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("SectorList", "Master", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
   


    //==================================================================================================================
    <section class="section">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h6 class="mb-0">Sector List</h6>
                            <span style="color: red">
                                @TempData["SectorList"]
                            </span>
                            @*<button class="btn btn-info"><a href="/Master/ProductMaster" class="text-white">Add New</a></button>*@
                        </div>
                        <p style="color: red;display: block; margin-bottom:0px; text-align:center">
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="tableExport" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Site Name</th>
                                        <th>Location</th>
                                        @*<th>Action</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstSector != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstSector)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.SiteName</td>
                                                    <td>@Item.SectorName</td>

                                                    @*<td>
                                                            <a href="/Master/SectorMaster?SectorID=@Item.SectorID" class="btn btn-info btn-sm">Edit</a>
                                                            <a href="/Master/DeleteSector?id=@Item.SectorID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Sector?');" name="btnDelete">Delete</a>
                                                        </td>*@

                                                </tr>

                                                i++;
                                            }
                                        }
                                    }


                                </tbody>

                            </table>
                            <span style="color: red">
                                @TempData["SectorList"]
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    //==================================================================================================================


}
