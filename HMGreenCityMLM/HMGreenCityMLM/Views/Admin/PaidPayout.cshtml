@model HMGreenCityMLM.Models.Wallet

@{
    ViewBag.Title = "PaidPayout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <br />
        @*<h4 class="page-header">Associate List</h4>*@
    </div>
</div>

@using (Html.BeginForm("PaidPayout", "Admin", FormMethod.Post, new { @id = "form1" }))
{

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Paid Payout Details
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3">
                            LoginId
                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login Id" })
                        </div>
                        <div class="col-md-3">
                            From Date
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @placeholder = "From Date" })
                        </div>
                        <div class="col-md-3">
                            To Date
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @placeholder = "To Date" })
                        </div>
                        <div class="col-md-3">
                            <br />
                            <input type="submit" name="GetDetails" class="btn btn-info" value="Get Details" />
                        </div>

                    </div>

                    <br />
                    <div class="panel-body table-responsive">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>LoginId</th>
                                    <th>Name</th>
                                    <th>Payment Date</th>
                                    <th>Amount</th>
                                    <th>Transaction Date</th>
                                    <th>TransactionNo</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    <th><b>Total</b></th>
                                    <th>@ViewBag.Total</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </tfoot>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstpayoutledger != null)
                                    {
                                        int i = 1;
                                        foreach (var Item in Model.lstpayoutledger)
                                        {
                                            <tr class="text-left">
                                                <td>@i</td>
                                                <td>@Item.LoginId</td>
                                                <td>@Item.DisplayName</td>
                                                <td>@Item.PaymentDate</td>
                                                <td>@Item.Amount</td>
                                                <td>@Item.TransactionDate</td>
                                                <td>@Item.TransactionNo</td>

                                            </tr>
                                            i++;
                                        }

                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
}
<script src="../vendor/jquery/jquery.min.js"></script>

<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,

    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });
</script>
