@model HMGreenCityMLM.Models.Wallet

@{
    ViewBag.Title = "AdvancePaymentReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("AdvancePaymentReport", "Admin", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{


    <br />
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- users edit start -->
                <section class="users-edit">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <ul class="nav nav-tabs mb-3" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center active" id="account-tab" data-toggle="tab" href="#account"
                                           aria-controls="account" role="tab" aria-selected="true">
                                            <i class="feather icon-user mr-25"></i><span class="d-none d-sm-block">Advance Payment Report </span>
                                        </a>
                                    </li>

                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="account" aria-labelledby="account-tab" role="tabpanel">

                                        <div class="row">
                                            <div class="col-md-6 form-group">
                                                <label>Login ID</label>
                                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login ID" })
                                            </div>
                                            <div class="col-lg-3 form-group">
                                                <label>From Date </label>
                                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly" })
                                            </div>
                                            <div class="col-lg-3 form-group">
                                                <label>To Date </label>
                                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly" })
                                            </div>
                                            <div class="col-md-6 form-group">
                                                <br />
                                                <input type="submit" class="btn btn-success pull-left" value="Get Details" name="btnDetails" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 table-responsive">
                                                <div class="dt-responsive table-responsive">
                                                    <table class="table mb-0" id="example23">
                                                        
                                                        <thead>
                                                            <tr>
                                                                <th>Sr No.</th>
                                                                <th>Login ID</th>
                                                                <th>Name</th>
                                                                <th>Amount</th>
                                                                <th>Payment Date</th>
                                                                <th>Payment Mode</th>
                                                                <th>Payment Details</th>
                                                                <th>Description</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model != null)
                                                            {
                                                                if (Model.lstewalletledger != null)
                                                                {
                                                                    int i = 1;
                                                                    foreach (var Item in Model.lstewalletledger)
                                                                    {
                                                                        <tr class="text-left">
                                                                            <td>@i</td>
                                                                            <td>@Item.LoginId</td>
                                                                            <td>@Item.DisplayName</td>
                                                                            <td>@Item.Amount</td>
                                                                            <td>@Item.PaymentDate</td>
                                                                            <td>@Item.PaymentMode</td>
                                                                            <td>@Item.TransactionNo</td>
                                                                            <td>@Item.Description</td>
                                                                        </tr>

                                                                        i++;
                                                                    }
                                                                }
                                                            }


                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                </section>
            </div>
        </div>
    </div>




                        <!-- main-panel ends -->
}

<script src="../../WebsiteCss/js/jquery.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>
