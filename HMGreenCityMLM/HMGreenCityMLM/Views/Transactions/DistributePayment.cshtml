@model HMGreenCityMLM.Models.Transactions
@{
    ViewBag.Title = "DistributePayment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("DistiributePayemntToMembers", "Transactions", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{


    <br />
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- users edit start -->
                <section class="users-edit">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <ul class="nav nav-tabs mb-3" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center active" id="account-tab" data-toggle="tab" href="#account"
                                           aria-controls="account" role="tab" aria-selected="true">
                                            <i class="feather icon-user mr-25"></i><span class="d-none d-sm-block">  Distribute Payment </span>
                                        </a>
                                    </li>

                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="account" aria-labelledby="account-tab" role="tabpanel">

                                        <div class="row">

                                            <p style="color:red">
                                                @TempData["DistributePayment"]
                                            </p>
                                            <div class="col-md-12 table-responsive">
                                                <div class="row">
                                                    <div class="col-lg-3">
                                                        <div class="form-group">
                                                            <label>Last Closing Date : </label>
                                                            @Html.DisplayFor(m => m.LastClosingDate)
                                                            <br />
                                                            <label>Last Payout No : </label>
                                                            @Html.DisplayFor(m => m.PayoutNo)
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-3">
                                                        <div class="form-group">
                                                            <label>Closing Date<span style="color:red">*</span></label>
                                                            @Html.TextBoxFor(m => m.ClosingDate, new { @class = "form-control", @placeholder = "Closing Date" })
                                                        </div>
                                                    </div>


                                                    <div class="col-lg-3">
                                                        <br />
                                                        <input class="btn btn-success" onclick="return validateform()" type="submit" value="Distribute Payment" />
                                                        <input type="submit" class="btn btn-success" value="Export To Excel" name="Export" formtarget="_blank" />
                                                    </div>
                                                </div>

                                                <div class="dt-responsive table-responsive">
                                                    <table class="table mb-0" id="example23">
                                                        <thead>
                                                            <tr>
                                                                <th>Sr No.</th>
                                                                <th>LoginID</th>
                                                                <th>Name</th>
                                                                <th>Binary Income </th>
                                                                <th>Direct Income</th>
                                                                <th hidden="hidden">Direct Leadership Bonus</th>
                                                                <th>Gross Amount</th>
                                                                <th>TDS Amount</th>
                                                                <th>Processing</th>
                                                                <th>Net Payable Amount</th>

                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model != null)
                                                            {
                                                                if (Model.lstassociate != null)
                                                                {
                                                                    int i = 1;
                                                                    foreach (var Item in Model.lstassociate)
                                                                    {
                                                                        <tr class="text-left">
                                                                            <td>@i</td>
                                                                            <td>@Item.LoginID</td>
                                                                            <td>@Item.FirstName</td>
                                                                            <td>@Item.BinaryIncome</td>
                                                                            <td>@Item.DirectIncome</td>
                                                                            <td hidden="hidden">@Item.LeadershipBonus</td>
                                                                            <td>@Item.GrossIncome</td>
                                                                            <td>@Item.TDS</td>
                                                                            <td>@Item.Processing</td>
                                                                            <td>@Item.NetIncome</td>
                                                                        </tr>
                                                                        i++;
                                                                    }

                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </section>
            </div>
        </div>
    </div>


                        <!-- main-panel ends -->
}
<script src="../../WebsiteCss/js/jquery.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

<script src="../..//WebsiteCss/js/jquery.min.js"></script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#ClosingDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    function validateform() {
        $(".errortext").removeClass("errortext");
        if ($('#ClosingDate').val() == '') {
            $("#ClosingDate").addClass('errortext');
            $('#ClosingDate').focus();
            return false;
        }
    }
</script>
<style>
    .errortext {
       border: 2px solid red !important;
       
    }
</style>
