    <script src="../../AssociatePanelcss/app-assets/js/core/app.min.js"></script>
    <script src="../../AssociatePanelcss/app-assets/js/scripts/components.min.js"></script>

    <!-- END: Theme JS-->
    <!-- BEGIN: Page JS-->
    <!-- END: Page JS-->
</body>

