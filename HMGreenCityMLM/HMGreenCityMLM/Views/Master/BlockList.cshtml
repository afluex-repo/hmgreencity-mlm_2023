@model HMGreenCityMLM.Models.Master

@{
    ViewBag.Title = "BlockList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("BlockList", "Master", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <span style="color: red">
        @TempData["BlockList"]
    </span>
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- users edit start -->
                <section class="users-edit">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <ul class="nav nav-tabs mb-3" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center active" id="account-tab" data-toggle="tab" href="#account"
                                           aria-controls="account" role="tab" aria-selected="true">
                                            <i class="feather icon-user mr-25"></i><span class="d-none d-sm-block">Block List</span>
                                        </a>
                                    </li>

                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="account" aria-labelledby="account-tab" role="tabpanel">
                                        <div class="row">
                                            <div class="col-md-12 table-responsive">
                                                <table class="table mb-0" id="example23">
                                                    <thead>
                                                        <tr>
                                                            <th>S No.</th>
                                                            <th>Site Name</th>
                                                            <th>Sector Name</th>
                                                            <th>Block Name</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (Model != null)
                                                        {
                                                            if (Model.lstBlock1 != null)
                                                            {
                                                                int i = 1;
                                                                foreach (var Item in Model.lstBlock1)
                                                                {
                                                                    <tr class="text-left">
                                                                        <td>@i</td>
                                                                        <td>@Item.SiteName</td>
                                                                        <td>@Item.SectorName</td>
                                                                        <td>@Item.BlockName</td>

                                                                        <td>
                                                                            <a href="/Master/BlockMaster?BlockID=@Item.BlockID" class="btn btn-info btn-sm">Edit</a>
                                                                            <a href="/Master/DeleteBlock?id=@Item.BlockID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this Block?');" name="btnDelete">Delete</a>
                                                                        </td>

                                                                    </tr>

                                                                    i++;
                                                                }
                                                            }
                                                        }


                                                    </tbody>
                                                </table>
                                                <span style="color: red">
                                                    @TempData["BlockList"]
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}


