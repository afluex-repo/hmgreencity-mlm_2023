@model HMGreenCityMLM.Models.Wallet

@{
    ViewBag.Title = "UsedPins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("UsedPins", "Wallet", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <br />
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="header-navbar-shadow"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <!-- users edit start -->
                <section class="users-edit">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <ul class="nav nav-tabs mb-3" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center active" id="account-tab" data-toggle="tab" href="#account"
                                           aria-controls="account" role="tab" aria-selected="true">
                                            <i class="feather icon-user mr-25"></i><span class="d-none d-sm-block">Used Pins</span>
                                        </a>
                                    </li>

                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="account" aria-labelledby="account-tab" role="tabpanel">

                                        <div class="row">
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    <label>Register To ID </label>
                                                    @Html.TextBoxFor(m => m.RegisteredTo, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    <label>Register To Name </label>
                                                    @Html.TextBoxFor(m => m.RegisteredToName, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    <label>ePinNo </label>
                                                    @Html.TextBoxFor(m => m.ePinNo, new { @class = "form-control" })
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    <label>Package  </label>
                                                    @Html.DropDownListFor(m => m.Package, new SelectList(ViewBag.ddlProduct, "Value", "Text"), new { @class = "form-control", @onchange = "FillAmount();" })
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    <br />
                                                    <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table mb-0" id="example23">
                                                <thead>
                                                    <tr>
                                                        <th>Sr No.</th>
                                                        <th>E-Pin No</th>
                                                        <th>Package</th>
                                                        <th>Owner</th>
                                                        <th>Created Date</th>
                                                        <th>Registered To</th>
                                                        <th>Status</th>


                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model != null)
                                                    {
                                                        if (Model.lstunusedpins != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.lstunusedpins)
                                                            {
                                                                <tr class="text-left">
                                                                    <td>@i</td>

                                                                    <td>@Item.ePinNo</td>
                                                                    <td>@Item.Package</td>

                                                                    <td>

                                                                        @Item.DisplayName

                                                                    </td>
                                                                    <td>@Item.AddedOn</td>
                                                                    <td>
                                                                        @Item.RegisteredTo
                                                                    </td>
                                                                    <td>@Item.Status</td>

                                                                </tr>
                                                                i++;
                                                            }

                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
}
<script src="../vendor/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>

