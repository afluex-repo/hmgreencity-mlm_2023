@model HMGreenCityMLM.Models.Wallet

@{
    ViewBag.Title = "PayoutLedger";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("PayoutLedger", "Wallet", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
 <div class="row">
        <div class="col-lg-12">
           
               <br />
               
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Payout Ledger
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                         
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>From Date  </label>
                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>To Date  </label>
                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <br />
                                <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                            </div>
                        </div>
                    </div>
                     <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Transaction Date</th>
                                <th>Narration</th>
                                <th>CrAmount</th>
                                <th>DrAMount</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstpayoutledger != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstpayoutledger)
                                    {
                                <tr class="text-left">
                                    <td>@i</td>

                                    <td>@Item.AddedOn</td>
                                    <td>@Item.Narration</td>
                                    <td>@Item.CrAmount</td>
                                    <td>@Item.DrAmount</td>
                                    <td>@Item.PayoutBalance</td>
                                </tr>
                                        i++;
                                    }

                                }
                            }
                        </tbody>
                    </table>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

}


<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
</script>


